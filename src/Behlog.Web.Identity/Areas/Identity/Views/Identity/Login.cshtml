@model UserLoginModel

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<html class="loading" lang="fa" data-textdirection="rtl" dir="rtl">
<!-- BEGIN: Head-->
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <title>ورود به بهلاگ</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/behlog/assets/images/ico/favicon.ico">
    <meta name="theme-color" content="#5A8DEE">

    <!-- BEGIN: Vendor CSS-->
    <link rel="stylesheet" type="text/css" href="~/behlog/assets/vendors/css/vendors.min.css">
    <!-- END: Vendor CSS-->
    <!-- BEGIN: Theme CSS-->
    <link rel="stylesheet" type="text/css" href="~/behlog/assets/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/behlog/assets/css/bootstrap-extended.css">
    <link rel="stylesheet" type="text/css" href="~/behlog/assets/css/colors.css">
    <link rel="stylesheet" type="text/css" href="~/behlog/assets/css/components.css">
    <link rel="stylesheet" type="text/css" href="~/behlog/assets/css/themes/dark-layout.css">
    <link rel="stylesheet" type="text/css" href="~/behlog/assets/css/themes/semi-dark-layout.css">
    <!-- END: Theme CSS-->
    <!-- BEGIN: Page CSS-->
    <link rel="stylesheet" type="text/css" href="~/behlog/assets/css/core/menu/menu-types/vertical-menu.css">
    <link rel="stylesheet" type="text/css" href="~/behlog/assets/css/pages/authentication.css">
    <!-- END: Page CSS-->

</head>
<!-- END: Head-->
<body class="vertical-layout vertical-menu-modern semi-dark-layout 1-column  navbar-sticky footer-static bg-full-screen-image  blank-page blank-page" data-open="click" data-menu="vertical-menu-modern" data-col="1-column" data-layout="semi-dark-layout">

    <!-- BEGIN: Content-->
    <div class="app-content content">
        <div class="content-overlay"></div>
        <div class="content-wrapper">
            <div class="content-header row">
            </div>
            <div class="content-body">
                <!-- login page start -->
                <section id="auth-login" class="row flexbox-container">
                    <div class="col-xl-8 col-11">
                        <div class="card bg-authentication mb-0">
                            <div class="row m-0">
                                <!-- left section-login -->
                                <div class="col-md-6 col-12 px-0">
                                    <div class="card disable-rounded-right mb-0 p-2 h-100 d-flex justify-content-center">
                                        <div class="card-header pb-1">
                                            <div class="card-title">
                                                <h4 class="text-center mb-2">
                                                    ورود به بهلاگ
                                                </h4>
                                            </div>
                                        </div>
                                        <div class="card-content">
                                            <div class="card-body">
                                                <form asp-controller="@IdentityController.Name" 
                                                    asp-action="@IdentityController.ActionLogin" 
                                                    enctype="application/x-www-form-urlencoded"
                                                    asp-antiforgery="true">

                                                    <div class="form-group mb-50">
                                                        <label asp-for="UserName" class="text-bold-700">نام کاربری</label>
                                                        <input asp-for="UserName" type="username" class="form-control" placeholder="نام کاربری شما" dir="ltr">
                                                        <span asp-validation-for="UserName"></span>
                                                    </div>
                                                    <div class="form-group">
                                                        <label asp-for="Password" class="text-bold-700">گذرواژه</label>
                                                        <input asp-for="Password" type="password" class="form-control" placeholder="کلمه عبور" dir="ltr">
                                                        <span asp-validation-for="Password"></span>
                                                    </div>
                                                    <div class="form-group d-flex flex-md-row flex-column justify-content-between align-items-center">
                                                        <div class="text-left">
                                                            <div class="checkbox checkbox-sm">
                                                                <input asp-for="RememberMe" type="checkbox" class="form-check-input">
                                                                <label class="checkboxsmall" for="exampleCheck1"><small>مرا به خاطر بسپار</small></label>
                                                            </div>
                                                        </div>
                                                        <div class="text-right line-height-2"><a href="auth-forgot-password.html" class="card-link"><small>گذرواژه تان را فراموش کردین؟</small></a></div>
                                                    </div>
                                                    <button type="submit" class="btn btn-primary glow w-100 position-relative">ورود<i id="icon-arrow" class="bx bx-left-arrow-alt"></i></button>
                                                </form>
                                                <hr>
                                                <div class="text-center"><small class="mr-25">حسابی ندارید؟</small><a href="#"><small>ثبت نام</small></a></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- right section image -->
                                <div class="col-md-6 d-md-block d-none text-center align-self-center p-3">
                                    <div class="card-content">
                                        <img class="img-fluid" src="~/behlog/assets/images/pages/login.png" alt="branding logo">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                <!-- login page ends -->

            </div>
        </div>
    </div>
    <!-- END: Content-->
    <!-- BEGIN: Theme JS-->
    <script src="~/behlog/assets/js/scripts/configs/vertical-menu-dark.js"></script>
    <script src="~/behlog/assets/js/core/app-menu.js"></script>
    <script src="~/behlog/assets/js/core/app.js"></script>
    <script src="~/behlog/assets/js/scripts/components.js"></script>
    <script src="~/behlog/assets/js/scripts/footer.js"></script>

    <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
    <partial name="_validationScripts" />
    <!-- END: Theme JS-->

    <script type="text/javascript">
        $(document).ready(function() {
            $('#UserName').focus();
        });
    </script>

  </body>
</html>