@model UserLoginModel

@{
    ViewData["Title"] = "Login";
}

<div>
    
    @if (Model.HasError)
    {
        <div class="alert alert-danger">
            <h3>Error!</h3>
            <p>
                @Model.ErrorMessages.ToString()
            </p>
        </div>
    }
    
    @if (Model.Success)
    {
        <div class="alert alert-success">
            <p>Welcome, You are successfully logged-in.</p>
        </div>
    }
    
    <form id="myform" method="post" asp-controller="Login" asp-action="Index" asp-area="Identity"  
          enctype="application/x-www-form-urlencoded">
        
        <div>
            <label asp-for="UserName">UserName: </label>
            <input class="form-control" asp-for="UserName" placeholder="UserName..." />
        </div>
        
        <div>
            <label asp-for="Password">Password: </label>
            <input class="form-control" asp-for="Password" type="password" placeholder="Password..." />
        </div>
        
        <div>
            <label asp-for="RememberMe">Remember?</label>
            <input asp-for="RememberMe" type="checkbox" class="form-check-input btn-check" />
        </div>
        
        <div class="form-action">
            <button class="btn btn-success" type="submit">Submit form</button>
        </div>
    </form>
    
</div>